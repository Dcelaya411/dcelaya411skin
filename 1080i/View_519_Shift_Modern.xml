                        <aligny>center</aligny>
                        <width>50</width>
                        <right>7</right>
                        <top>6</top>
                        <height>50</height>
                        <textcolor>$VAR[WatchedBackingColor]</textcolor>
                        <font>SymbolPosterBackground</font>
