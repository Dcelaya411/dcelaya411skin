                    </control>
                    <control type="image">
                        <left>10</left>
                        <width>200</width>
                        <height>305</height>
                        <bottom>80</bottom>
                        <aspectratio scalediffuse="false">keep</aspectratio>
                        <texture diffuse="diffuse/wall.png" background="true">$INFO[ListItem.Icon]</texture>
